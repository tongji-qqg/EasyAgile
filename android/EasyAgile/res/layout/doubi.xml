<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/topic_projectName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#Project"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/topic_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:text="我们来讨论一下吧！！"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/topic_Ac_author_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="25dp"
            android:maxWidth="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/topic_Ac_author_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="zhou1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/topic_Ac_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="2005-6-8 12:00:25"
            android:textColor="@color/gray"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/topic_Ac_body_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/aliceblue"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="wolai huo yi shuoaaaaaaaaa \n jiushishuo nageshenmeqishi......\nenenenduide"
        android:textSize="18sp" />
    
    <ListView
        android:id="@+id/topic_comment_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <EditText
        android:id="@+id/topic_comment_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_shape"
        android:ems="10"
        android:gravity="top"
        android:hint="输入评论"
        android:inputType="textMultiLine"
        android:lines="3"
        android:paddingLeft="5dp"
        android:paddingTop="5dp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/topic_comment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/skyblue"
        android:text="发表评论"
        android:textColor="@color/white" />

</LinearLayout>


</ScrollView>
